@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.StockPictureUrl" class="card-img-top"/>
            
            <div class="card-body">
                <div class="badge bg-primary">
                    <p>Category: @Model.Category.Name</p>
                </div>
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>

            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Price: @Model.Price$
                </h4>
                <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" class="btn btn-primary btn-block">Add to basket</a>
            </div>
        </div>
        
    </div>

</div>
