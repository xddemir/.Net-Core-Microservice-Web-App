@{
    ViewData["Title"] = "Index";
}

@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-2">Create Course</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Category</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Duration</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Picture</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                                <td class="m-2">
                                    <a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success mb-2 mr-2 btn small">Update</a>
                                    <a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mb-2 btn small">Delete</a>
                                </td> 
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">No Course Found!</div>
                }
            </div>
        </div>
    </div>
</div>